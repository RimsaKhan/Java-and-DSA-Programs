class demo{
    public static void  half_diamond(int n){
    for(int i=1;i<=n;i++){
    for(int j=1;j<=i;j++){
        System.out.print("*"+" ");
    }
     System.out.println("");
    }
    
 for(int i=n-1;i>=1;i--){
    for(int j=1;j<=i;j++){
        System.out.print("*"+" ");
    }
     System.out.println("");
    }
    }
public static void main(String[]args){
 half_diamond(4);
}
}
